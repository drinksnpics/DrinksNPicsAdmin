@model MoviesDBModels.FoodItem

@{
    ViewBag.Title = "Create Food Item";
    Layout = "_Layout";
}

<div class="container">
    <h2>Create Food Item</h2>
    <form asp-controller="Cinema" asp-action="CreateProduct" method="post">
        <input type="hidden" class="form-control" asp-for="@Model.id" name="id">
        <div class="form-group">
            <label for="productName">Product Name</label>
            <input type="text" class="form-control" asp-for="@Model.productName" name="productName" placeholder="Product Name">
        </div>
        <div class="form-group">
            <label for="price">Product Price ($MXN)</label>
            <input type="number" step="any" min="0" class="form-control" asp-for="@Model.price" name="price">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" asp-for="@Model.description" name="description">
        </div>
        <div class="form-group">
            <label for="image_url">Image URL</label>
            <input type="text" class="form-control" asp-for="@Model.image_url" name="image_url" placeholder="Image URL">
        </div>
        <div class="form-group">
            <label for="avaliable">Make avaliable</label>
            <input type="checkbox" class="form-control" asp-for="@Model.avaliable" name="avaliable">
        </div>
        <button type="submit" class="btn btn-dark">Create</button>
    </form>
</div>