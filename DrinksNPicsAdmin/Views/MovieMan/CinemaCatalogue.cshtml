@model List<MoviesDBModels.CatalogueMovie>

@{
    ViewBag.Title = "Catalogue";
    Layout = "_Layout";
}

<div class="container">
    <h2 style="display: inline-block">Movie Catalogue</h2>
    <button  class="btn btn-dark form-inline" style="float: right; display: inline-block" onclick="location.href='@Url.Action("PopularMovies", "MovieMan")'"><i class="fas fa-plus"></i> Add Movies</button>
    <br/>
</div>

<div class="container">
    <table class="table">
        <thead>
        <tr>
            <th scope="col" style="width: 10%">Movie Name</th>
            <th scope="col" style="width: 40%">Description</th>
            <th scope="col">Release Date</th>
            <th scope="col">Length</th>
            <th scope="col">Rating</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <th scope="row">@movie.movieTitle</th>
                <td>@movie.movieeDescription</td>
                <td>@movie.releaseDate.ToString("MMMM dd, yyyy")</td>
                <td>@movie.movieLength min</td>
                <td>@movie.movieRating / 10</td>
                <td><button  class="btn btn-dark" onclick="location.href='@Url.Action("MovieDetail", "MovieMan", new { id = @movie.movieId })'"><i class="fas fa-eye"></i></button></td>
                @* <td><button  class="btn btn-danger" onclick="location.href='@Url.Action("AddFoodItem", "Cinema")'"><i class="fas fa-trash"></i></button></td> *@
            </tr>
        }
        </tbody>
    </table>
</div>
