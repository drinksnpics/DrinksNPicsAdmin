@model IEnumerable<MoviesDBModels.Result>

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h1>Popular Movies</h1>
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-sm-4" style="padding: 15px">
                <div class="card">
                    <img src="@("https://image.tmdb.org/t/p/w500" + @movie.backdrop_path)" class="card-img-top" alt="Backdrop Image">
                    <div class="card-body">
                        <h5 class="card-title">@movie.title</h5>
                        <p class="card-text">@movie.overview</p>
                        <a href="@Url.Action("AddToCinemaCatalogue", "MovieMan", new {movieId=movie.id})" class="btn btn-primary">Add to Catalogue</a>
                        <a href="#" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
</body>
</html>